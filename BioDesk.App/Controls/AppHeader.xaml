<UserControl x:Class="BioDesk.App.Controls.AppHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:BioDesk.App.Controls"
             mc:Ignorable="d" 
             x:Name="Root">
    
    <Border Style="{StaticResource HeaderStyle}">
        <Grid Margin="32,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Logo e Título -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <controls:AppLogo Size="56" Margin="0,0,16,0" VerticalAlignment="Center"/>
                
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Title, ElementName=Root}" 
                               Style="{StaticResource HeroTitleStyle}"/>
                    <TextBlock Text="{Binding Subtitle, ElementName=Root}" 
                               Style="{StaticResource HeaderSubtitleStyle}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Conteúdo da Direita -->
            <ContentPresenter Grid.Column="2" 
                              Content="{Binding RightContent, ElementName=Root}"
                              VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>