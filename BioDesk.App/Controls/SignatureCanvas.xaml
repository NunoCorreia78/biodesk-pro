<UserControl x:Class="BioDesk.App.Controls.SignatureCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    
    <UserControl.Resources>
        <Style x:Key="SignatureButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDarker}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource Surface}" 
                BorderBrush="{DynamicResource Border}" BorderThickness="0,0,0,1"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Assinatura Digital" 
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="{DynamicResource OnSurface}"/>
                    <TextBlock Text="Assine na Ã¡rea abaixo usando o rato, touch ou caneta digital"
                               FontSize="12" Opacity="0.7"
                               Foreground="{DynamicResource OnSurface}"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Limpar" 
                            Style="{StaticResource SignatureButtonStyle}"
                            Background="{DynamicResource Error}"
                            Click="LimparAssinatura_Click"/>
                    <Button Content="Testar" 
                            Style="{StaticResource SignatureButtonStyle}"
                            Background="{DynamicResource Secondary}"
                            Click="TestarAssinatura_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Signature Canvas -->
        <Border Grid.Row="1" Background="White" 
                BorderBrush="{DynamicResource Border}" BorderThickness="1"
                Margin="15">
            <Grid>
                <!-- Background pattern to indicate signature area -->
                <Canvas Name="BackgroundCanvas" Background="Transparent">
                    <Line X1="50" Y1="0" X2="50" Y2="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"
                          Stroke="#E0E0E0" StrokeThickness="1" StrokeDashArray="5,5"/>
                    <Line X1="0" Y1="50" X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}" Y2="50"
                          Stroke="#E0E0E0" StrokeThickness="1" StrokeDashArray="5,5"/>
                </Canvas>
                
                <!-- Main signature canvas -->
                <InkCanvas Name="SignatureInkCanvas" 
                           Background="Transparent"
                           EditingMode="Ink"
                           UseCustomCursor="True">
                    <InkCanvas.DefaultDrawingAttributes>
                        <DrawingAttributes Color="Black" 
                                         Width="2" 
                                         Height="2" 
                                         StylusTip="Ellipse"
                                         FitToCurve="True"/>
                    </InkCanvas.DefaultDrawingAttributes>
                </InkCanvas>
                
                <!-- Watermark when empty -->
                <TextBlock Name="WatermarkText"
                           Text="Clique e arraste para assinar..."
                           FontSize="16" FontStyle="Italic"
                           Foreground="#C0C0C0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource Surface}"
                BorderBrush="{DynamicResource Border}" BorderThickness="0,1,0,0"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Status: " FontWeight="SemiBold"
                               Foreground="{DynamicResource OnSurface}"/>
                    <TextBlock Name="StatusText" Text="Aguardando assinatura"
                               Foreground="{DynamicResource OnSurfaceVariant}"/>
                    <TextBlock Name="SignatureInfo" Text=""
                               Foreground="{DynamicResource OnSurfaceVariant}"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancelar" 
                            Style="{StaticResource SignatureButtonStyle}"
                            Background="{DynamicResource SurfaceVariant}"
                            Foreground="{DynamicResource OnSurfaceVariant}"
                            Click="CancelarAssinatura_Click"/>
                    <Button Content="Confirmar Assinatura" 
                            Name="ConfirmarButton"
                            Style="{StaticResource SignatureButtonStyle}"
                            IsEnabled="False"
                            Click="ConfirmarAssinatura_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>