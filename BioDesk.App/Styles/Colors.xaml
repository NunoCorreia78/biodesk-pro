<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Colors - Verde neutro e suave baseado na imagem -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#8DB380"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F9FAF9"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#2D3D2F"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7A70"/>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#F9FAF9"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E8ECE9"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#8DB380"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#E8ECE9"/>
    
    <!-- Button Colors - Mais suaves -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#9BC08F"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#7FA672"/>
    
    <!-- Focus Colors -->
    <SolidColorBrush x:Key="FocusOutlineBrush" Color="#4D8DB380"/>
    
    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#10000000</Color>
    <Color x:Key="HeaderShadowColor">#08000000</Color>
    
    <!-- Dark Theme (para futuro) -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#111315"/>
    <SolidColorBrush x:Key="DarkCardBrush" Color="#1A1D1C"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="#F5F7F6"/>
    
</ResourceDictionary>