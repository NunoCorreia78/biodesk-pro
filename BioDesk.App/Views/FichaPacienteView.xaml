<UserControl x:Class="BioDesk.App.Views.FichaPacienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#FAFBFC">
    
    <UserControl.Resources>
        <!-- Conversor para Boolean para Visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header da Ficha -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E1E5E9" 
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.04" ShadowDepth="1" BlurRadius="8"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Botão Voltar -->
                <Button Grid.Column="0"
                        Content="← Voltar aos Pacientes"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#64748B"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="Medium"
                        Command="{Binding VoltarCommand}"
                        Cursor="Hand"
                        Margin="0,0,20,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#475569"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Informações do Paciente -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding NomePaciente, FallbackValue='Novo Paciente'}"
                                  FontFamily="Segoe UI"
                                  FontSize="24"
                                  FontWeight="SemiBold"
                                  Foreground="#1E293B"/>
                        <TextBlock Text=" *" 
                                  FontFamily="Segoe UI"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="#DC2626"
                                  Margin="4,0,0,0"
                                  Visibility="{Binding TemAlteracoesNaoGuardadas, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  ToolTip="Tem alterações não guardadas"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe UI"
                                  FontSize="14"
                                  Foreground="#64748B">
                            <Run Text="{Binding IdadePaciente, FallbackValue='0'}"/>
                            <Run Text="anos"/>
                        </TextBlock>
                        <TextBlock Text=" - Alterações não guardadas" 
                                  FontFamily="Segoe UI"
                                  FontSize="14"
                                  Foreground="#DC2626" 
                                  FontWeight="Medium"
                                  Margin="4,0,0,0"
                                  Visibility="{Binding TemAlteracoesNaoGuardadas, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Ações -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="💾 Guardar"
                            Background="#A4C3A2"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="Medium"
                            Padding="16,8"
                            Margin="0,0,12,0"
                            Command="{Binding GuardarCommand}"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"

                                                   Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#8DB08A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#769E73"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="�️ Imprimir"
                            Background="#64748B"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="Medium"
                            Padding="16,8"
                            Command="{Binding ImprimirCommand}"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"

                                                   Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#475569"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#334155"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Sistema de Abas -->
        <TabControl Grid.Row="1" 
                    Background="Transparent"
                    BorderThickness="0"
                    SelectedIndex="{Binding AbaAtiva}">
            
            <!-- Estilo personalizado para as abas -->
            <TabControl.Style>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Header das abas -->
                                    <Border Grid.Row="0" 
                                            Background="White" 
                                            BorderBrush="#E1E5E9" 
                                            BorderThickness="0,0,0,1">
                                        <TabPanel IsItemsHost="True" 
                                                 HorizontalAlignment="Left"
                                                 Margin="32,0"/>
                                    </Border>
                                    
                                    <!-- Conteúdo das abas -->
                                    <ContentPresenter Grid.Row="1" 
                                                     ContentSource="SelectedContent"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Style>
            
            <!-- Aba 1: Dados Pessoais -->
            <TabItem Header="👤 Dados Pessoais">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <!-- Conteúdo Dados Pessoais -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="40,32">
                    <StackPanel>
                        
                        <!-- Seção 1: Informações Básicas -->
                        <Border Background="White" 
 
                               Padding="24"
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1"
                               Margin="0,0,0,24">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" ShadowDepth="1" BlurRadius="6"/>
                            </Border.Effect>
                            
                            <StackPanel>
                                <!-- Título da seção -->
                                <TextBlock Text="👤 Informações Pessoais" 
                                          FontFamily="Segoe UI"
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="#1E293B"
                                          Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="16"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Nome Completo (span full width) -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                                              Text="Nome Completo *" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5"
                                            Text="{Binding NomeCompleto, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                    
                                    <!-- Data de Nascimento -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" 
                                              Text="Data de Nascimento *" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <DatePicker Grid.Row="4" Grid.Column="0"
                                               SelectedDate="{Binding DataNascimento, UpdateSourceTrigger=PropertyChanged}"
                                               FontFamily="Segoe UI"
                                               FontSize="14"
                                               Background="#FAFBFC"
                                               BorderBrush="#D1D5DB"/>
                                    
                                    <!-- Género -->
                                    <TextBlock Grid.Row="3" Grid.Column="2" 
                                              Text="Género" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <ComboBox Grid.Row="4" Grid.Column="2"
                                             SelectedItem="{Binding Genero, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI"
                                             FontSize="14"
                                             Background="#FAFBFC"
                                             BorderBrush="#D1D5DB">
                                        <ComboBoxItem Content="Masculino"/>
                                        <ComboBoxItem Content="Feminino"/>
                                        <ComboBoxItem Content="Outro"/>
                                    </ComboBox>
                                    
                                    <!-- Estado Civil -->
                                    <TextBlock Grid.Row="3" Grid.Column="4" 
                                              Text="Estado Civil" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <ComboBox Grid.Row="4" Grid.Column="4"
                                             SelectedItem="{Binding EstadoCivil, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI"
                                             FontSize="14"
                                             Background="#FAFBFC"
                                             BorderBrush="#D1D5DB">
                                        <ComboBoxItem Content="Solteiro(a)"/>
                                        <ComboBoxItem Content="Casado(a)"/>
                                        <ComboBoxItem Content="Divorciado(a)"/>
                                        <ComboBoxItem Content="Viúvo(a)"/>
                                        <ComboBoxItem Content="União de Facto"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Seção 2: Contactos -->
                        <Border Background="White" 
 
                               Padding="24"
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1"
                               Margin="0,0,0,24">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" ShadowDepth="1" BlurRadius="6"/>
                            </Border.Effect>
                            
                            <StackPanel>
                                <!-- Título da seção -->
                                <TextBlock Text="📞 Contactos" 
                                          FontFamily="Segoe UI"
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="#1E293B"
                                          Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="16"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Telefone -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                              Text="Telefone" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="0"
                                            Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                    
                                    <!-- Email -->
                                    <TextBlock Grid.Row="0" Grid.Column="2" 
                                              Text="Email" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="2"
                                            Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                    
                                    <!-- NIF -->
                                    <TextBlock Grid.Row="0" Grid.Column="4" 
                                              Text="NIF" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="4"
                                            Text="{Binding NifPaciente, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                    
                                    <!-- Morada (span full width) -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5"
                                              Text="Morada" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5"
                                            Text="{Binding Morada, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Seção 3: Localização -->
                        <Border Background="White" 
 
                               Padding="24"
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1"
                               Margin="0,0,0,24">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" ShadowDepth="1" BlurRadius="6"/>
                            </Border.Effect>
                            
                            <StackPanel>
                                <!-- Título da seção -->
                                <TextBlock Text="📍 Localização" 
                                          FontFamily="Segoe UI"
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="#1E293B"
                                          Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Cidade -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                              Text="Cidade" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="0"
                                            Text="{Binding Cidade, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                    
                                    <!-- Código Postal -->
                                    <TextBlock Grid.Row="0" Grid.Column="2" 
                                              Text="Código Postal" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="2"
                                            Text="{Binding CodigoPostal, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                    
                                    <!-- Profissão -->
                                    <TextBlock Grid.Row="0" Grid.Column="4" 
                                              Text="Profissão" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="4"
                                            Text="{Binding Profissao, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Seção 4: Informações Clínicas -->
                        <Border Background="White" 
 
                               Padding="24"
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" ShadowDepth="1" BlurRadius="6"/>
                            </Border.Effect>
                            
                            <StackPanel>
                                <!-- Título da seção -->
                                <TextBlock Text="🏥 Informações Clínicas" 
                                          FontFamily="Segoe UI"
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="#1E293B"
                                          Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="16"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="16"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Local Habitual -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" 
                                              Text="Local Habitual" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <ComboBox Grid.Row="1" Grid.Column="0"
                                             SelectedItem="{Binding LocalHabitual2, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI"
                                             FontSize="14"
                                             Background="#FAFBFC"
                                             BorderBrush="#D1D5DB">
                                        <ComboBoxItem Content="Chão de Lopes"/>
                                        <ComboBoxItem Content="Samora Correia"/>
                                        <ComboBoxItem Content="Coruche"/>
                                        <ComboBoxItem Content="Elvas"/>
                                        <ComboBoxItem Content="Campo Maior"/>
                                        <ComboBoxItem Content="Cliniprata"/>
                                        <ComboBoxItem Content="Spazzio Vita"/>
                                        <ComboBoxItem Content="Online"/>
                                    </ComboBox>
                                    
                                    <!-- Como Conheceu -->
                                    <TextBlock Grid.Row="0" Grid.Column="2" 
                                              Text="Como Conheceu" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <ComboBox Grid.Row="1" Grid.Column="2"
                                             SelectedItem="{Binding ComoConheceu, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI"
                                             FontSize="14"
                                             Background="#FAFBFC"
                                             BorderBrush="#D1D5DB">
                                        <ComboBoxItem Content="Website/Google"/>
                                        <ComboBoxItem Content="Recomendação"/>
                                        <ComboBoxItem Content="Redes Sociais"/>
                                        <ComboBoxItem Content="Publicidade"/>
                                        <ComboBoxItem Content="Outro"/>
                                    </ComboBox>
                                    
                                    <!-- Quem Recomendou (condicional) -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                                              Text="Quem Recomendou" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"
                                              Visibility="{Binding MostrarCampoRecomendacao, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                                            Text="{Binding QuemRecomendou, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"
                                            Visibility="{Binding MostrarCampoRecomendacao, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Observações -->
                                    <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"
                                              Text="Observações" 
                                              FontFamily="Segoe UI"
                                              FontSize="13"
                                              FontWeight="Medium" 
                                              Foreground="#374151"
                                              Margin="0,0,0,6"/>
                                    <TextBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3"
                                            Text="{Binding Observacoes, UpdateSourceTrigger=PropertyChanged}"
                                            FontFamily="Segoe UI"
                                            FontSize="14"
                                            Padding="12,10"
                                            BorderBrush="#D1D5DB"
                                            BorderThickness="1"
                                            Background="#FAFBFC"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            MinHeight="80"
                                            VerticalScrollBarVisibility="Auto"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Aba 2: Consentimentos -->
            <TabItem Header="📋 Consentimentos">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="32,24">
                    <StackPanel Name="QuestionarioConsentimentosPanel">
                        
                        <!-- Cabeçalho do Questionário -->
                        <Border Background="#F8FAFC" 
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1" 

                               Padding="24">
                            <StackPanel>
                                <TextBlock Text="📋 Questionário Geral de Saúde" 
                                          FontFamily="Segoe UI" 
                                          FontSize="24" 
                                          FontWeight="SemiBold"
                                          Foreground="#1E293B"/>
                                <TextBlock Text="Complete as informações abaixo para garantir um atendimento seguro e adequado às suas necessidades de saúde." 
                                          FontFamily="Segoe UI" 
                                          FontSize="14" 
                                          Foreground="#64748B"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Seção 1: Informações Médicas Gerais -->
                        <Expander IsExpanded="True" 
                                 Background="White" 
                                 BorderBrush="#E2E8F0" 
                                 BorderThickness="1">
                            <Expander.Header>
                                <TextBlock Text="🩺 Informações Médicas Gerais" 
                                          FontFamily="Segoe UI" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          Foreground="#1E293B"
                                          Margin="16,12"/>
                            </Expander.Header>
                            <StackPanel Margin="24">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
                                        <TextBlock Text="Tem alguma doença crónica?" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_DoencaCronica" 
                                                Text="{Binding DoencaCronica, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                                        <TextBlock Text="Sintomas atuais" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_SintomasAtuais" 
                                                Text="{Binding SintomasAtuais, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,16,0,0">
                                        <TextBlock Text="Medicação atual" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_MedicacaoAtual" 
                                                Text="{Binding MedicacaoAtual, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"
                                                AcceptsReturn="True"
                                                MinHeight="80"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Seção 2: Alergias -->
                        <Expander Background="White" 
                                 BorderBrush="#E2E8F0" 
                                 BorderThickness="1"
>
                            <Expander.Header>
                                <TextBlock Text="⚠️ Alergias e Intolerâncias" 
                                          FontFamily="Segoe UI" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          Foreground="#1E293B"
                                          Margin="16,12"/>
                            </Expander.Header>
                            <StackPanel Margin="24">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
                                        <TextBlock Text="Alergias alimentares" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_AlergiasAlimentares" 
                                                Text="{Binding AlergiasAlimentares, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                                        <TextBlock Text="Alergias a medicamentos" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_AlergiasMedicamentos" 
                                                Text="{Binding AlergiasMedicamentos, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,16,12,0">
                                        <TextBlock Text="Alergias ambientais" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_AlergiasAmbientais" 
                                                Text="{Binding AlergiasAmbientais, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,16,0,0">
                                        <TextBlock Text="Alergias a plantas/suplementos" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_AlergiasPlantasSupl" 
                                                Text="{Binding AlergiasPlantasSupl, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Seção 3: Histórico Cirúrgico -->
                        <Expander Background="White" 
                                 BorderBrush="#E2E8F0" 
                                 BorderThickness="1"
>
                            <Expander.Header>
                                <TextBlock Text="🏥 Histórico Cirúrgico e Fraturas" 
                                          FontFamily="Segoe UI" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          Foreground="#1E293B"
                                          Margin="16,12"/>
                            </Expander.Header>
                            <StackPanel Margin="24">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                        <TextBlock Text="Cirurgias realizadas" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_HistoricoCirurgico" 
                                                Text="{Binding HistoricoCirurgico, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"
                                                AcceptsReturn="True"
                                                MinHeight="80"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock Text="Fraturas e lesões" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_Fraturas" 
                                                Text="{Binding Fraturas, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"
                                                AcceptsReturn="True"
                                                MinHeight="80"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Seção 4: Estilo de Vida -->
                        <Expander Background="White" 
                                 BorderBrush="#E2E8F0" 
                                 BorderThickness="1"
>
                            <Expander.Header>
                                <TextBlock Text="🌿 Estilo de Vida" 
                                          FontFamily="Segoe UI" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          Foreground="#1E293B"
                                          Margin="16,12"/>
                            </Expander.Header>
                            <StackPanel Margin="24">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,0">
                                        <TextBlock Text="Exercício físico" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <ComboBox Name="cb_AtividadeFisica"
                                                 SelectedValue="{Binding AtividadeFisica, UpdateSourceTrigger=PropertyChanged}"
                                                 BorderBrush="#D1D5DB"
                                                 BorderThickness="1"

                                                 Padding="12,8"
                                                 FontSize="14">
                                            <ComboBoxItem Content="Sedentário"/>
                                            <ComboBoxItem Content="Leve (1-2x semana)"/>
                                            <ComboBoxItem Content="Moderado (3-4x semana)"/>
                                            <ComboBoxItem Content="Intenso (5+ x semana)"/>
                                        </ComboBox>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,8,0">
                                        <TextBlock Text="Tabagismo" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <ComboBox Name="cb_Tabagismo"
                                                 SelectedValue="{Binding Tabagismo, UpdateSourceTrigger=PropertyChanged}"
                                                 BorderBrush="#D1D5DB"
                                                 BorderThickness="1"

                                                 Padding="12,8"
                                                 FontSize="14">
                                            <ComboBoxItem Content="Nunca fumou"/>
                                            <ComboBoxItem Content="Ex-fumador"/>
                                            <ComboBoxItem Content="Fumador ocasional"/>
                                            <ComboBoxItem Content="Fumador regular"/>
                                        </ComboBox>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="8,0,0,0">
                                        <TextBlock Text="Consumo de álcool" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <ComboBox Name="cb_ConsumoAlcool"
                                                 SelectedValue="{Binding ConsumoAlcool, UpdateSourceTrigger=PropertyChanged}"
                                                 BorderBrush="#D1D5DB"
                                                 BorderThickness="1"

                                                 Padding="12,8"
                                                 FontSize="14">
                                            <ComboBoxItem Content="Não consome"/>
                                            <ComboBoxItem Content="Ocasional"/>
                                            <ComboBoxItem Content="Social"/>
                                            <ComboBoxItem Content="Regular"/>
                                        </ComboBox>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,16,0,0">
                                        <TextBlock Text="Hábitos alimentares" 
                                                  FontFamily="Segoe UI" 
                                                  FontSize="14" 
                                                  FontWeight="Medium"
                                                  Foreground="#374151"/>
                                        <TextBox Name="txt_HabitosAlimentares" 
                                                Text="{Binding HabitosAlimentares, UpdateSourceTrigger=PropertyChanged}"

                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"

                                                Padding="12,8"
                                                FontSize="14"
                                                AcceptsReturn="True"
                                                MinHeight="60"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Seção de Assinatura Digital -->
                        <Expander Header="✍️ Assinatura Digital" 
                                 IsExpanded="True"
                                 Margin="0,20,0,0"
                                 FontFamily="Segoe UI"
                                 FontWeight="SemiBold"
                                 FontSize="16"
                                 Foreground="#111827">
                            <Border Background="White" 
                                   BorderBrush="#E5E7EB" 
                                   BorderThickness="1" 
                                   CornerRadius="8" 
                                   Margin="0,15,0,0"
                                   Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Status da Assinatura -->
                                    <Border Grid.Row="0" 
                                           Background="#F3F4F6" 
                                           BorderBrush="#D1D5DB" 
                                           BorderThickness="1" 
                                           CornerRadius="6" 
                                           Padding="15,10" 
                                           Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                      Text="📝" 
                                                      FontSize="20" 
                                                      VerticalAlignment="Center" 
                                                      Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock FontFamily="Segoe UI" 
                                                          FontSize="14" 
                                                          FontWeight="Medium" 
                                                          Foreground="#111827">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Questionário ainda não assinado"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TemAssinatura}" Value="True">
                                                                    <Setter Property="Text" Value="Questionário assinado digitalmente"/>
                                                                    <Setter Property="Foreground" Value="#059669"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock FontFamily="Segoe UI" 
                                                          FontSize="12" 
                                                          Foreground="#6B7280"
                                                          Visibility="{Binding TemAssinatura, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Run Text="Assinado em:"/>
                                                    <Run Text="{Binding DataAssinatura, StringFormat='{}{0:dd/MM/yyyy HH:mm}', FallbackValue='--'}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="2" 
                                                   Content="✍️ Assinar" 
                                                   Background="#3B82F6" 
                                                   Foreground="White" 
                                                   BorderThickness="0" 
                                                   Padding="15,8" 
                                                   FontFamily="Segoe UI" 
                                                   FontSize="12" 
                                                   FontWeight="Medium" 
                                                   Cursor="Hand" 
                                                   Click="AbrirAssinatura_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TemAssinatura}" Value="True">
                                                                <Setter Property="Content" Value="👁️ Ver Assinatura"/>
                                                                <Setter Property="Background" Value="#6B7280"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!-- Informações sobre Assinatura Digital -->
                                    <Border Grid.Row="1" 
                                           Background="#FEF3C7" 
                                           BorderBrush="#F59E0B" 
                                           BorderThickness="1" 
                                           CornerRadius="6" 
                                           Padding="15,10" 
                                           Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="ℹ️ Sobre a Assinatura Digital" 
                                                      FontFamily="Segoe UI" 
                                                      FontSize="14" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#92400E" 
                                                      Margin="0,0,0,5"/>
                                            <TextBlock FontFamily="Segoe UI" 
                                                      FontSize="12" 
                                                      Foreground="#92400E" 
                                                      TextWrapping="Wrap">
                                                A assinatura digital garante a autenticidade e integridade do questionário de saúde. 
                                                Uma vez assinado, o documento será protegido contra alterações não autorizadas.
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </Expander>

                        <!-- Botões de Ação -->
                        <Border Background="#F8FAFC" 
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1" 

                               Padding="24">
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right" 
                                      >
                                <Button Name="GuardarQuestionarioButton"
                                       Content="💾 Guardar Questionário" 
                                       Command="{Binding GuardarQuestionarioCommand}"
                                       Background="#059669" 
                                       Foreground="White"
                                       BorderThickness="0"

                                       Padding="20,12"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Cursor="Hand"/>
                                <Button Name="GerarConsentimentoButton"
                                       Content="📄 Gerar Consentimento" 
                                       Command="{Binding GerarConsentimentoCommand}"
                                       Background="#0F172A" 
                                       Foreground="White"
                                       BorderThickness="0"

                                       Padding="20,12"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Aba 3: Registo Clínico -->
            <TabItem Header="🩺 Registo Clínico">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="32,24">
                    <TextBlock Text="Registo Clínico - Em desenvolvimento" 
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Foreground="#64748B"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </ScrollViewer>
            </TabItem>
            
            <!-- Aba 4: Iridologia -->
            <TabItem Header="👁️ Iridologia">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="32,24">
                    <TextBlock Text="Iridologia - Em desenvolvimento" 
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Foreground="#64748B"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
