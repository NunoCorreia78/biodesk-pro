<UserControl x:Class="BioDesk.App.Views.FichaPacienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#FAFBFC">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header da Ficha -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E1E5E9" 
                BorderThickness="0,0,0,1"
                Padding="32,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.04" ShadowDepth="1" BlurRadius="8"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Botão Voltar -->
                <Button Grid.Column="0"
                        Content="← Voltar aos Pacientes"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#64748B"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="Medium"
                        Command="{Binding VoltarCommand}"
                        Cursor="Hand"
                        Margin="0,0,20,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#475569"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Informações do Paciente -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding NomePaciente, FallbackValue='Novo Paciente'}"
                              FontFamily="Segoe UI"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="#1E293B"/>
                    <TextBlock FontFamily="Segoe UI"
                              FontSize="14"
                              Foreground="#64748B">
                        <Run Text="{Binding IdadePaciente, FallbackValue='0'}"/>
                        <Run Text="anos"/>
                    </TextBlock>
                </StackPanel>
                
                <!-- Ações -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="💾 Guardar"
                            Background="#A4C3A2"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="Medium"
                            Padding="16,8"
                            Margin="0,0,12,0"
                            Command="{Binding GuardarCommand}"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#8DB08A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#769E73"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="�️ Imprimir"
                            Background="#64748B"
                            Foreground="White"
                            BorderThickness="0"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            FontWeight="Medium"
                            Padding="16,8"
                            Command="{Binding ImprimirCommand}"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#475569"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#334155"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Sistema de Abas -->
        <TabControl Grid.Row="1" 
                    Background="Transparent"
                    BorderThickness="0"
                    SelectedIndex="{Binding AbaAtiva}">
            
            <!-- Estilo personalizado para as abas -->
            <TabControl.Style>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Header das abas -->
                                    <Border Grid.Row="0" 
                                            Background="White" 
                                            BorderBrush="#E1E5E9" 
                                            BorderThickness="0,0,0,1">
                                        <TabPanel IsItemsHost="True" 
                                                 HorizontalAlignment="Left"
                                                 Margin="32,0"/>
                                    </Border>
                                    
                                    <!-- Conteúdo das abas -->
                                    <ContentPresenter Grid.Row="1" 
                                                     ContentSource="SelectedContent"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Style>
            
            <!-- Aba 1: Dados Pessoais -->
            <TabItem Header="👤 Dados Pessoais">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <!-- Conteúdo Dados Pessoais -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="32,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Nome Completo -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                  Text="Nome Completo *" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                Text="{Binding NomeCompleto, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,20"/>
                        
                        <!-- Data de Nascimento e Género -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                  Text="Data de Nascimento *" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <DatePicker Grid.Row="3" Grid.Column="0"
                                   SelectedDate="{Binding DataNascimento, UpdateSourceTrigger=PropertyChanged}"
                                   Width="200"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,20,20"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                  Text="Género" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <ComboBox Grid.Row="3" Grid.Column="1"
                                 SelectedItem="{Binding Genero, UpdateSourceTrigger=PropertyChanged}"
                                 Width="150"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,20">
                            <ComboBoxItem Content="Masculino"/>
                            <ComboBoxItem Content="Feminino"/>
                            <ComboBoxItem Content="Outro"/>
                        </ComboBox>
                        
                        <!-- NIF e Telefone -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                  Text="NIF" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <TextBox Grid.Row="5" Grid.Column="0"
                                Text="{Binding NifPaciente, UpdateSourceTrigger=PropertyChanged}"
                                Width="180"
                                HorizontalAlignment="Left"
                                Margin="0,0,20,20"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                  Text="Telefone *" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <TextBox Grid.Row="5" Grid.Column="1"
                                Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}"
                                Width="200"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20"/>
                        
                        <!-- Email e Profissão -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                  Text="Email *" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <TextBox Grid.Row="7" Grid.Column="0"
                                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,20,20"/>
                        
                        <TextBlock Grid.Row="6" Grid.Column="1" 
                                  Text="Profissão" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <TextBox Grid.Row="7" Grid.Column="1"
                                Text="{Binding Profissao, UpdateSourceTrigger=PropertyChanged}"
                                Margin="0,0,0,20"/>
                        
                        <!-- Local Habitual -->
                        <TextBlock Grid.Row="8" Grid.Column="0" 
                                  Text="Local Habitual *" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <ComboBox Grid.Row="9" Grid.Column="0"
                                 SelectedItem="{Binding LocalHabitual2, UpdateSourceTrigger=PropertyChanged}"
                                 Width="300"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,20,20">
                            <ComboBoxItem Content="Chão de Lopes"/>
                            <ComboBoxItem Content="Samora Correia"/>
                            <ComboBoxItem Content="Coruche"/>
                            <ComboBoxItem Content="Elvas"/>
                            <ComboBoxItem Content="Campo Maior"/>
                            <ComboBoxItem Content="Cliniprata"/>
                            <ComboBoxItem Content="Spazzio Vita"/>
                            <ComboBoxItem Content="Online"/>
                        </ComboBox>
                        
                        <!-- Como Conheceu -->
                        <TextBlock Grid.Row="8" Grid.Column="1" 
                                  Text="Como Conheceu" 
                                  FontWeight="Medium" 
                                  Margin="0,0,0,8"/>
                        <ComboBox Grid.Row="9" Grid.Column="1"
                                 SelectedItem="{Binding ComoConheceu, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,20">
                            <ComboBoxItem Content="Internet"/>
                            <ComboBoxItem Content="Recomendação"/>
                            <ComboBoxItem Content="Redes Sociais"/>
                            <ComboBoxItem Content="Publicidade"/>
                            <ComboBoxItem Content="Outro"/>
                        </ComboBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <!-- Aba 2: Consentimentos -->
            <TabItem Header="📋 Consentimentos">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="32,24">
                    <TextBlock Text="Consentimentos - Em desenvolvimento" 
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Foreground="#64748B"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </ScrollViewer>
            </TabItem>
            
            <!-- Aba 3: Registo Clínico -->
            <TabItem Header="🩺 Registo Clínico">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="32,24">
                    <TextBlock Text="Registo Clínico - Em desenvolvimento" 
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Foreground="#64748B"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </ScrollViewer>
            </TabItem>
            
            <!-- Aba 4: Iridologia -->
            <TabItem Header="👁️ Iridologia">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" 
                                            Background="Transparent" 
                                            BorderThickness="0,0,0,3"
                                            BorderBrush="Transparent"
                                            Padding="24,16"
                                            Margin="0,0,8,0">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#059669"/>
                                            <Setter Property="Foreground" Value="#059669"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                    </Style>
                </TabItem.Style>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="32,24">
                    <TextBlock Text="Iridologia - Em desenvolvimento" 
                              FontFamily="Segoe UI"
                              FontSize="16"
                              Foreground="#64748B"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>