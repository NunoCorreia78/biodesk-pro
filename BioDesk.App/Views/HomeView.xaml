<UserControl x:Class="BioDesk.App.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:BioDesk.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#FAFBFC">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header elegante -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E1E5E9" 
                BorderThickness="0,0,0,1"
                Padding="40,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.04" ShadowDepth="1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Texto à esquerda com melhor tipografia -->
                <TextBlock Grid.Column="0" 
                          Text="Gestão clínica — Naturopatia · Osteopatia · Medicina Quântica"
                          FontFamily="Segoe UI"
                          FontSize="15"
                          FontWeight="Normal"
                          Foreground="#64748B"
                          VerticalAlignment="Center"/>
                
                <!-- Card de sessão mais elegante -->
                <Border Grid.Column="1" 
                        Background="White"
                        CornerRadius="12"
                        Padding="20,12"
                        BorderBrush="#E1E5E9"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.06" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <!-- Ícone de utilizador mais sofisticado -->
                        <Border Background="#F1F5F9" 
                               CornerRadius="8" 
                               Width="32" Height="32" 
                               Margin="0,0,12,0">
                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,8.39C13.57,9.4 15.42,10 17.42,10C18.2,10 18.95,9.91 19.67,9.74C19.88,10.45 20,11.21 20,12C20,16.41 16.41,20 12,20C9,20 6.39,18.61 5,16.33C6.86,15.5 9.18,15 12,15C14.82,15 17.14,15.5 19,16.33C17.61,18.61 15,20 12,20Z M9,11A3,3 0 0,0 12,8A3,3 0 0,0 15,11A3,3 0 0,0 12,14A3,3 0 0,0 9,11Z"
                                  Fill="#64748B" 
                                  Stretch="Uniform"
                                  Width="16" Height="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="Sessão Ativa" 
                                      FontFamily="Segoe UI" 
                                      FontSize="13"
                                      FontWeight="Medium"
                                      Foreground="#1E293B"/>
                            <TextBlock Text="{Binding CurrentTime, StringFormat='HH:mm'}" 
                                      FontFamily="Segoe UI" 
                                      FontSize="15"
                                      FontWeight="SemiBold"
                                      Foreground="#64748B"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Área principal com melhor estrutura -->
        <Grid Grid.Row="1" Margin="0,60,0,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Logótipo e título -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <controls:AppLogo Size="80" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Biodesk" 
                              FontFamily="Segoe UI"
                              FontSize="36"
                              FontWeight="Light"
                              Foreground="#1E293B"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,-4"/>
                    <TextBlock Text="Ambiente Clínico" 
                              FontFamily="Segoe UI"
                              FontSize="24"
                              FontWeight="Normal"
                              Foreground="#64748B"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Cards redesenhados com muito melhor estética -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                
                <!-- Card Pacientes elegante - BOTÃO COMPLETO -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Command="{Binding OpenPacientesCommand}"
                        Cursor="Hand"
                        Margin="0,0,32,0">
                    <Border Background="White"
                            CornerRadius="16"
                            Padding="32,28"
                            Width="320"
                            BorderBrush="#E1E5E9"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="4" BlurRadius="20"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.15" ShadowDepth="8" BlurRadius="25"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Background" Value="#FAFBFC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <StackPanel>
                            <!-- Ícone elegante -->
                            <Border Background="#F8FAFC" 
                                   CornerRadius="12" 
                                   Width="56" Height="56" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20">
                                <Path Data="M16,4C12.42,4 9.5,6.92 9.5,10.5C9.5,14.08 12.42,17 16,17C19.58,17 22.5,14.08 22.5,10.5C22.5,6.92 19.58,4 16,4M6,18C6.06,18 6.13,18 6.19,18L6.15,18C6.32,18 6.49,18.01 6.66,18.03C7.56,18.13 8.69,18.4 10,19.09C13.5,21 18.5,21 22,19.09C23.31,18.4 24.44,18.13 25.34,18.03C25.51,18.01 25.68,18 25.85,18L25.81,18C25.87,18 25.94,18 26,18H32L32,22H6V18Z"
                                      Fill="#A4C3A2" 
                                      Stretch="Uniform"
                                      Width="28" Height="28"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Título com melhor tipografia -->
                            <TextBlock Text="Pacientes"
                                      FontFamily="Segoe UI"
                                      FontSize="22"
                                      FontWeight="SemiBold"
                                      Foreground="#1E293B"
                                      TextAlignment="Center"
                                      Margin="0,0,0,12"/>
                            
                            <!-- Subtítulo melhorado -->
                            <TextBlock Text="Listar, pesquisar e gerir históricos clínicos"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      LineHeight="20"
                                      Foreground="#64748B"
                                      TextAlignment="Center"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,28"/>
                            
                            <!-- Indicador de ação -->
                            <Border Background="#E2F6E1"
                                   CornerRadius="10"
                                   HorizontalAlignment="Stretch"
                                   Padding="0,12">
                                <TextBlock Text="Clique para abrir"
                                          FontFamily="Segoe UI"
                                          FontSize="14"
                                          FontWeight="Medium"
                                          Foreground="#4A8F47"
                                          TextAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Button>
                
                <!-- Card Íris elegante - BOTÃO COMPLETO -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Command="{Binding OpenIrisAnonimaCommand}"
                        Cursor="Hand">
                    <Border Background="White"
                            CornerRadius="16"
                            Padding="32,28"
                            Width="320"
                            BorderBrush="#E1E5E9"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="4" BlurRadius="20"/>
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.15" ShadowDepth="8" BlurRadius="25"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Background" Value="#FAFBFC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        
                        <StackPanel>
                            <!-- Ícone elegante do olho -->
                            <Border Background="#F8FAFC" 
                                   CornerRadius="12" 
                                   Width="56" Height="56" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20">
                                <Path Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"
                                      Fill="#9B7EBD" 
                                      Stretch="Uniform"
                                      Width="28" Height="28"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Título -->
                            <TextBlock Text="Avaliação de Íris (Anónima)"
                                      FontFamily="Segoe UI"
                                      FontSize="22"
                                      FontWeight="SemiBold"
                                      Foreground="#1E293B"
                                      TextAlignment="Center"
                                      Margin="0,0,0,12"/>
                            
                            <!-- Subtítulo -->
                            <TextBlock Text="Sessão anónima para carregar imagem e sobrepor mapa"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      LineHeight="20"
                                      Foreground="#64748B"
                                      TextAlignment="Center"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,28"/>
                            
                            <!-- Indicador de ação -->
                            <Border Background="#F3E8FF"
                                   CornerRadius="10"
                                   HorizontalAlignment="Stretch"
                                   Padding="0,12">
                                <TextBlock Text="Clique para abrir"
                                          FontFamily="Segoe UI"
                                          FontSize="14"
                                          FontWeight="Medium"
                                          Foreground="#8B5CF6"
                                          TextAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Rodapé refinado -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E1E5E9"
                BorderThickness="0,1,0,0"
                Padding="0,16">
            <TextBlock Text="v0.1 · Alt+1 Pacientes · Alt+2 Íris Anónima"
                      FontFamily="Segoe UI"
                      FontSize="12"
                      Foreground="#94A3B8"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>