<UserControl x:Class="BioDesk.App.Views.QuestionarioCompletoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid Background="#fafafa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#e5e7eb" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="22" FontWeight="Bold" Text="Declaração de Saúde &amp; Consentimentos"/>
                    <TextBlock FontSize="13" Foreground="#6b7280" Margin="0,4,0,0">
                        <Run Text="Paciente:"/>
                        <Run Text="{Binding NomePaciente, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run Text="• Data:"/>
                        <Run Text="{Binding DataPreenchimento, StringFormat=dd/MM/yyyy, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="📝 Novo Questionário" 
                            Background="#4f7c6d" Foreground="White" 
                            BorderThickness="0" Padding="16,8" FontWeight="SemiBold"
                            Command="{Binding NovoQuestionarioCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="📂 Carregar Existente" 
                            Background="White" Foreground="#4f7c6d" 
                            BorderThickness="1" BorderBrush="#4f7c6d" Padding="16,8" FontWeight="SemiBold"
                            Command="{Binding CarregarQuestionarioCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="🖨️ Imprimir" 
                            Background="White" Foreground="#4f7c6d" 
                            BorderThickness="1" BorderBrush="#4f7c6d" Padding="16,8" FontWeight="SemiBold"
                            Command="{Binding ImprimirCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conteúdo Principal -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     Padding="20">
            <StackPanel>
                
                <!-- Seção 1: Informações Médicas Gerais -->
                <Expander IsExpanded="True" 
                         Background="White" 
                         BorderBrush="#E2E8F0" 
                         BorderThickness="1"
                         Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🩺 Informações Médicas Gerais" 
                                  FontFamily="Segoe UI" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#1E293B"
                                  Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Doença Crónica -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
                                <TextBlock Text="Doença crónica" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Name="cb_DoencaCronica" Grid.Column="0"
                                             SelectedItem="{Binding DoencaCronica, UpdateSourceTrigger=PropertyChanged}"
                                             Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                             Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                             SelectionChanged="ComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Não"/>
                                        <ComboBoxItem Content="Hipertensão"/>
                                        <ComboBoxItem Content="Diabetes"/>
                                        <ComboBoxItem Content="Problemas cardíacos"/>
                                        <ComboBoxItem Content="Problemas da tiroide"/>
                                        <ComboBoxItem Content="Artrite"/>
                                        <ComboBoxItem Content="Asma"/>
                                        <ComboBoxItem Content="Outras"/>
                                    </ComboBox>
                                    
                                    <TextBox Name="txt_DoencaCronicaOutras" Grid.Column="2"
                                            Text="{Binding DoencaCronicaDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                            Padding="8,6" FontSize="14" Margin="10,4,0,0"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Sintomas Atuais -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                                <TextBlock Text="Sintomas atuais" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <TextBox Text="{Binding SintomasAtuais, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="12,8" FontSize="14" Margin="0,4,0,0"
                                       />
                            </StackPanel>
                            
                            <!-- Medicação Atual -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,16,0,0">
                                <TextBlock Text="Medicação atual" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <TextBox Text="{Binding MedicacaoAtual, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="12,8" FontSize="14" Margin="0,4,0,0"
                                        AcceptsReturn="True" MinHeight="60"
                                       />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Seção 2: Alergias e Intolerâncias -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="⚠️ Alergias e Intolerâncias" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Alergias Alimentares -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
                                <TextBlock Text="Alergias alimentares" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Name="cb_AlergiasAlimentares" Grid.Column="0"
                                             SelectedItem="{Binding AlergiasAlimentares, UpdateSourceTrigger=PropertyChanged}"
                                             Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                             Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                             SelectionChanged="ComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Nenhuma"/>
                                        <ComboBoxItem Content="Lactose"/>
                                        <ComboBoxItem Content="Glúten"/>
                                        <ComboBoxItem Content="Frutos secos"/>
                                        <ComboBoxItem Content="Marisco"/>
                                        <ComboBoxItem Content="Ovos"/>
                                        <ComboBoxItem Content="Soja"/>
                                        <ComboBoxItem Content="Outras"/>
                                    </ComboBox>
                                    
                                    <TextBox Name="txt_AlergiasAlimentaresOutras" Grid.Column="2"
                                            Text="{Binding AlergiasAlimentaresDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                            Padding="8,6" FontSize="14" Margin="10,4,0,0"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Alergias a Medicamentos -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                                <TextBlock Text="Alergias a medicamentos" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Name="cb_AlergiasMedicamentos" Grid.Column="0"
                                             SelectedItem="{Binding AlergiasMedicamentos, UpdateSourceTrigger=PropertyChanged}"
                                             Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                             Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                             SelectionChanged="ComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Nenhuma"/>
                                        <ComboBoxItem Content="Penicilina"/>
                                        <ComboBoxItem Content="Aspirina"/>
                                        <ComboBoxItem Content="Ibuprofeno"/>
                                        <ComboBoxItem Content="Antibióticos"/>
                                        <ComboBoxItem Content="Anestésicos"/>
                                        <ComboBoxItem Content="Outras"/>
                                    </ComboBox>
                                    
                                    <TextBox Name="txt_AlergiasMedicamentosOutras" Grid.Column="2"
                                            Text="{Binding AlergiasMedicamentosDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                            Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                            />
                                </Grid>
                            </StackPanel>
                            
                            <!-- Alergias Ambientais -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,16,12,0">
                                <TextBlock Text="Alergias ambientais" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                
                                <!-- CheckBoxes para alergias específicas -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox Content="Pólen" 
                                             IsChecked="{Binding AlergiaPolen, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Ácaros do pó" 
                                             IsChecked="{Binding AlergiaAcaros, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Pelos de animais" 
                                             IsChecked="{Binding AlergiaPelosAnimais, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Poeira" 
                                             IsChecked="{Binding AlergiaPoeira, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Mofo" 
                                             IsChecked="{Binding AlergiaMofo, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                                </StackPanel>
                                
                                <!-- Campo para outras alergias ambientais -->
                                <TextBlock Text="Outras alergias ambientais:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                                <TextBox Name="txt_AlergiasAmbientaisOutras"
                                        Text="{Binding AlergiasAmbientaisOutras, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                        Height="60">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <Label Content="Especifique outras alergias ambientais..." Foreground="#9CA3AF" />
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                            
                            <!-- Alergias a Plantas/Fitoterápicos -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,16,0,0">
                                <TextBlock Text="Plantas/Fitoterápicos" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Name="cb_AlergiasPlantas" Grid.Column="0"
                                             SelectedItem="{Binding AlergiasPlantas, UpdateSourceTrigger=PropertyChanged}"
                                             Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                             Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                             SelectionChanged="ComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Nenhuma"/>
                                        <ComboBoxItem Content="Camomila"/>
                                        <ComboBoxItem Content="Eucalipto"/>
                                        <ComboBoxItem Content="Arnica"/>
                                        <ComboBoxItem Content="Aloe vera"/>
                                        <ComboBoxItem Content="Ginkgo biloba"/>
                                        <ComboBoxItem Content="Ginseng"/>
                                        <ComboBoxItem Content="Equinácea"/>
                                        <ComboBoxItem Content="Outras"/>
                                    </ComboBox>
                                    
                                    <TextBox Name="txt_AlergiasPlantasOutras" Grid.Column="2"
                                            Text="{Binding AlergiasPlantasDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                            Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                            />
                                </Grid>
                            </StackPanel>
                            
                            <!-- Outras Alergias -->
                            <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,16,0,0">
                                <TextBlock Text="Outras alergias (látex, níquel, cosméticos, etc.)" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Name="cb_OutrasAlergias" Grid.Column="0"
                                             SelectedItem="{Binding OutrasAlergias, UpdateSourceTrigger=PropertyChanged}"
                                             Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                             Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                             SelectionChanged="ComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Nenhuma"/>
                                        <ComboBoxItem Content="Látex"/>
                                        <ComboBoxItem Content="Níquel"/>
                                        <ComboBoxItem Content="Cosméticos"/>
                                        <ComboBoxItem Content="Detergentes"/>
                                        <ComboBoxItem Content="Outras"/>
                                    </ComboBox>
                                    
                                    <TextBox Name="txt_OutrasAlergiasOutras" Grid.Column="2"
                                            Text="{Binding OutrasAlergiasDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                            Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                            />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Seção 3: Doenças Oncológicas -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🎗️ Sistema Oncológico" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <!-- Histórico Oncológico -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Histórico oncológico" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Name="cb_ProblemasOncologicos" Grid.Column="0"
                                         SelectedItem="{Binding ProblemasOncologicos, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                         SelectionChanged="ComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Nenhum"/>
                                    <ComboBoxItem Content="Câncer de mama"/>
                                    <ComboBoxItem Content="Câncer de pulmão"/>
                                    <ComboBoxItem Content="Câncer colorretal"/>
                                    <ComboBoxItem Content="Câncer de próstata"/>
                                    <ComboBoxItem Content="Câncer de estômago"/>
                                    <ComboBoxItem Content="Linfoma"/>
                                    <ComboBoxItem Content="Leucemia"/>
                                    <ComboBoxItem Content="Melanoma"/>
                                    <ComboBoxItem Content="Outras"/>
                                </ComboBox>
                                
                                <TextBox Name="txt_ProblemasOncologicosOutras" Grid.Column="2"
                                        Text="{Binding ProblemasOncologicosDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                        />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Seção 4: Doenças Reumáticas -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🦴 Sistema Reumático" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <!-- Problemas Reumáticos -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Doenças reumáticas" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Name="cb_ProblemasReumaticos" Grid.Column="0"
                                         SelectedItem="{Binding ProblemasReumaticos, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                         SelectionChanged="ComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Nenhuma"/>
                                    <ComboBoxItem Content="Artrite reumatoide"/>
                                    <ComboBoxItem Content="Osteoartrite"/>
                                    <ComboBoxItem Content="Fibromialgia"/>
                                    <ComboBoxItem Content="Lupus"/>
                                    <ComboBoxItem Content="Artrite psoriática"/>
                                    <ComboBoxItem Content="Espondilite anquilosante"/>
                                    <ComboBoxItem Content="Gota"/>
                                    <ComboBoxItem Content="Outras"/>
                                </ComboBox>
                                
                                <TextBox Name="txt_ProblemasReumaticosOutras" Grid.Column="2"
                                        Text="{Binding ProblemasReumaticosDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                        />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Seção 5: Sistema Respiratório -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🫁 Sistema Respiratório" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Problemas respiratórios" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Name="cb_ProblemasRespiratorios" Grid.Column="0"
                                         SelectedItem="{Binding ProblemasRespiratorios, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                         SelectionChanged="ComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Nenhum"/>
                                    <ComboBoxItem Content="Asma"/>
                                    <ComboBoxItem Content="Bronquite"/>
                                    <ComboBoxItem Content="DPOC"/>
                                    <ComboBoxItem Content="Apneia do sono"/>
                                    <ComboBoxItem Content="Rinite alérgica"/>
                                    <ComboBoxItem Content="Sinusite"/>
                                    <ComboBoxItem Content="Outras"/>
                                </ComboBox>
                                
                                <TextBox Name="txt_ProblemasRespiratoriosOutras" Grid.Column="2"
                                        Text="{Binding ProblemasRespiratoriosDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                        />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Seção 6: Sistema Digestivo -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🍽️ Sistema Digestivo" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Problemas digestivos" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Name="cb_ProblemasDigestivos" Grid.Column="0"
                                         SelectedItem="{Binding ProblemasDigestivos, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                         SelectionChanged="ComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Nenhum"/>
                                    <ComboBoxItem Content="Gastrite"/>
                                    <ComboBoxItem Content="Úlcera"/>
                                    <ComboBoxItem Content="Refluxo"/>
                                    <ComboBoxItem Content="Síndrome do intestino irritável"/>
                                    <ComboBoxItem Content="Doença de Crohn"/>
                                    <ComboBoxItem Content="Colite ulcerosa"/>
                                    <ComboBoxItem Content="Prisão de ventre"/>
                                    <ComboBoxItem Content="Outras"/>
                                </ComboBox>
                                
                                <TextBox Name="txt_ProblemasDigestivosOutras" Grid.Column="2"
                                        Text="{Binding ProblemasDigestivosDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                        />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Seção 7: Sistema Cardiovascular -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="❤️ Sistema Cardiovascular" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Problemas cardiovasculares" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Name="cb_ProblemasCardiovasculares" Grid.Column="0"
                                         SelectedItem="{Binding ProblemasCardiovasculares, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                         SelectionChanged="ComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Nenhum"/>
                                    <ComboBoxItem Content="Hipertensão"/>
