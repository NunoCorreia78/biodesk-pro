<UserControl x:Class="BioDesk.App.Views.QuestionarioCompletoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid Background="#fafafa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#e5e7eb" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="22" FontWeight="Bold" Text="Declaração de Saúde &amp; Consentimentos"/>
                    <TextBlock FontSize="13" Foreground="#6b7280" Margin="0,4,0,0">
                        <Run Text="Paciente:"/>
                        <Run Text="{Binding NomePaciente, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run Text="• Data:"/>
                        <Run Text="{Binding DataPreenchimento, StringFormat=dd/MM/yyyy, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="📝 Novo Questionário" 
                            Background="#4f7c6d" Foreground="White" 
                            BorderThickness="0" Padding="16,8" FontWeight="SemiBold"
                            Command="{Binding NovoQuestionarioCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="📂 Carregar Existente" 
                            Background="White" Foreground="#4f7c6d" 
                            BorderThickness="1" BorderBrush="#4f7c6d" Padding="16,8" FontWeight="SemiBold"
                            Command="{Binding CarregarQuestionarioCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="🖨️ Imprimir" 
                            Background="White" Foreground="#4f7c6d" 
                            BorderThickness="1" BorderBrush="#4f7c6d" Padding="16,8" FontWeight="SemiBold"
                            Command="{Binding ImprimirCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conteúdo Principal -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     Padding="20">
            <StackPanel>
                
                <!-- Seção 1: Informações Médicas Gerais -->
                <Expander IsExpanded="True" 
                         Background="White" 
                         BorderBrush="#E2E8F0" 
                         BorderThickness="1"
                         Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🩺 Informações Médicas Gerais" 
                                  FontFamily="Segoe UI" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#1E293B"
                                  Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Doença Crónica -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
                                <TextBlock Text="Doenças crónicas" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                
                                <!-- CheckBoxes para doenças específicas -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox Content="Hipertensão" 
                                             IsChecked="{Binding DoencaHipertensao, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Problemas cardíacos" 
                                             IsChecked="{Binding DoencaCardiopatia, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Diabetes Tipo 1" 
                                             IsChecked="{Binding DoencaDiabetesTipo1, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Diabetes Tipo 2" 
                                             IsChecked="{Binding DoencaDiabetesTipo2, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Problemas da tiroide" 
                                             IsChecked="{Binding DoencaTiroideia, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Dislipidemia (colesterol)" 
                                             IsChecked="{Binding DoencaDislipidemia, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Problemas renais" 
                                             IsChecked="{Binding DoencaRenal, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Problemas hepáticos" 
                                             IsChecked="{Binding DoencaHepatica, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Doença autoimune" 
                                             IsChecked="{Binding DoencaAutoimune, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Osteoporose" 
                                             IsChecked="{Binding DoencaOsteoporose, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Asma/DPOC" 
                                             IsChecked="{Binding DoencaAsmaDPOC, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Oncologia" 
                                             IsChecked="{Binding DoencaOncologia, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                                </StackPanel>
                                
                                <!-- Campo para outras doenças -->
                                <TextBlock Text="Outras doenças crónicas:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                                <TextBox Name="txt_DoencaCronicaOutras"
                                        Text="{Binding DoencaCronicaDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                        Height="60"/>
                            </StackPanel>
                            
                            <!-- Sintomas Atuais -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                                <TextBlock Text="Sintomas atuais" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <TextBox Text="{Binding SintomasAtuais, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="12,8" FontSize="14" Margin="0,4,0,0"
                                       />
                            </StackPanel>
                            
                            <!-- Medicação Atual -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,16,0,0">
                                <TextBlock Text="Medicação atual" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <TextBox Text="{Binding MedicacaoAtual, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="12,8" FontSize="14" Margin="0,4,0,0"
                                        AcceptsReturn="True" MinHeight="60"
                                       />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Seção 2: Alergias e Intolerâncias -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="⚠️ Alergias e Intolerâncias" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Alergias Alimentares -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
                                <TextBlock Text="Alergias e intolerâncias alimentares" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                
                                <!-- CheckBoxes para intolerâncias específicas -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox Content="Glúten" 
                                             IsChecked="{Binding IntoleranciaGluten, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Lactose" 
                                             IsChecked="{Binding IntoleranciaLactose, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Proteína do leite" 
                                             IsChecked="{Binding IntoleranciaProteinaLeite, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Ovos" 
                                             IsChecked="{Binding IntoleranciaOvos, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Marisco" 
                                             IsChecked="{Binding IntoleranciaMarisco, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Frutos secos" 
                                             IsChecked="{Binding IntoleranciaFrutosSecos, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                                </StackPanel>
                                
                                <!-- Campo para outras intolerâncias alimentares -->
                                <TextBlock Text="Outras alergias/intolerâncias alimentares:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                                <TextBox Name="txt_AlergiasAlimentaresOutras"
                                        Text="{Binding IntoleranciaAlimentarOutras, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                        Height="60"/>
                            </StackPanel>
                            
                            <!-- Alergias a Medicamentos -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                                <TextBlock Text="Alergias a medicamentos" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                
                                <!-- CheckBoxes para alergias específicas -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox Content="Penicilina" 
                                             IsChecked="{Binding AlergiaPenicilina, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Aspirina" 
                                             IsChecked="{Binding AlergiaAspirina, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Ibuprofeno" 
                                             IsChecked="{Binding AlergiaIbuprofeno, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Antibióticos" 
                                             IsChecked="{Binding AlergiaAntibioticos, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Anestésicos" 
                                             IsChecked="{Binding AlergiaAnestesicos, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                                </StackPanel>
                                
                                <!-- Campo para outras alergias a medicamentos -->
                                <TextBlock Text="Outras alergias a medicamentos:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                                <TextBox Name="txt_AlergiasMedicamentosOutras"
                                        Text="{Binding AlergiaMedicamentosOutras, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                        Height="60"/>
                            </StackPanel>
                            
                            <!-- Alergias Ambientais -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,16,12,0">
                                <TextBlock Text="Alergias ambientais" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                
                                <!-- CheckBoxes para alergias específicas -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox Content="Pólen" 
                                             IsChecked="{Binding AlergiaPolen, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Ácaros do pó" 
                                             IsChecked="{Binding AlergiaAcaros, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Pelos de animais" 
                                             IsChecked="{Binding AlergiaPelosAnimais, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Poeira" 
                                             IsChecked="{Binding AlergiaPoeira, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Mofo" 
                                             IsChecked="{Binding AlergiaMofo, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                                </StackPanel>
                                
                                <!-- Campo para outras alergias ambientais -->
                                <TextBlock Text="Outras alergias ambientais:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                                <TextBox Name="txt_AlergiasAmbientaisOutras"
                                        Text="{Binding AlergiasAmbientaisOutras, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                        Height="60">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <Label Content="Especifique outras alergias ambientais..." Foreground="#9CA3AF" />
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                            
                            <!-- Alergias a Plantas/Fitoterápicos -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,16,0,0">
                                <TextBlock Text="Plantas/Fitoterápicos" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                
                                <!-- CheckBoxes para alergias a plantas específicas -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox Content="Camomila" 
                                             IsChecked="{Binding AlergiaCamomila, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Eucalipto" 
                                             IsChecked="{Binding AlergiaEucalipto, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Arnica" 
                                             IsChecked="{Binding AlergiaArnica, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Aloe vera" 
                                             IsChecked="{Binding AlergiaAloeVera, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Ginkgo biloba" 
                                             IsChecked="{Binding AlergiaGinkgoBiloba, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Ginseng" 
                                             IsChecked="{Binding AlergiaGinseng, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Equinácea" 
                                             IsChecked="{Binding AlergiaEchinacea, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                                </StackPanel>
                                
                                <!-- Campo para outras alergias a plantas -->
                                <TextBlock Text="Outras plantas/fitoterápicos:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                                <TextBox Name="txt_AlergiasPlantasOutras"
                                        Text="{Binding AlergiaPlantasOutras, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                        Height="60"/>
                            </StackPanel>
                            </StackPanel>
                            
                            <!-- Outras Alergias -->
                            <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,16,0,0">
                                <TextBlock Text="Outras alergias (látex, níquel, cosméticos, etc.)" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                                
                                <!-- CheckBoxes para outras alergias específicas -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox Content="Látex" 
                                             IsChecked="{Binding AlergiaLatex, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Níquel" 
                                             IsChecked="{Binding AlergiaNiquel, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Cosméticos" 
                                             IsChecked="{Binding AlergiaCosmeticos, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                    
                                    <CheckBox Content="Detergentes" 
                                             IsChecked="{Binding AlergiaDetergentes, UpdateSourceTrigger=PropertyChanged}"
                                             FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                                </StackPanel>
                                
                                <!-- Campo para outras alergias específicas -->
                                <TextBlock Text="Outras alergias específicas:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                                <TextBox Name="txt_OutrasAlergiasOutras"
                                        Text="{Binding OutrasAlergiasEspecificas, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                        Height="60"/>
                            </StackPanel>
                                            />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Seção 3: Doenças Oncológicas -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🎗️ Sistema Oncológico" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <!-- Histórico Oncológico -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Histórico oncológico" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                            
                            <!-- CheckBoxes para problemas oncológicos específicos -->
                            <StackPanel Orientation="Vertical">
                                <CheckBox Content="Câncer de mama" 
                                         IsChecked="{Binding OncologiaCancerMama, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Câncer de pulmão" 
                                         IsChecked="{Binding OncologiaCancerPulmao, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Câncer colorretal" 
                                         IsChecked="{Binding OncologiaCancerColorretal, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Câncer de próstata" 
                                         IsChecked="{Binding OncologiaCancerProstata, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Câncer de estômago" 
                                         IsChecked="{Binding OncologiaCancerEstomago, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Linfoma" 
                                         IsChecked="{Binding OncologiaLinfoma, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Leucemia" 
                                         IsChecked="{Binding OncologiaLeucemia, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Melanoma" 
                                         IsChecked="{Binding OncologiaMelanoma, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563"/>
                            </StackPanel>
                            
                            <!-- Campo para outros problemas oncológicos -->
                            <TextBlock Text="Outros problemas oncológicos:" FontFamily="Segoe UI" FontSize="12" FontWeight="Medium" Foreground="#6B7280" Margin="0,12,0,4"/>
                            <TextBox Name="txt_ProblemasOncologicosOutras"
                                    Text="{Binding OncologiaOutras, UpdateSourceTrigger=PropertyChanged}"
                                    Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                    Padding="8,6" FontSize="13" TextWrapping="Wrap" AcceptsReturn="True"
                                    Height="60"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Seção 4: Doenças Reumáticas -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🦴 Sistema Reumático" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <!-- Problemas Reumáticos -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Doenças reumáticas" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,8"/>
                            
                            <!-- CheckBoxes para problemas reumáticos específicos -->
                            <StackPanel Orientation="Vertical">
                                <CheckBox Content="Artrite reumatoide" 
                                         IsChecked="{Binding ReumatoideArtriteReumatoide, UpdateSourceTrigger=PropertyChanged}"
                                         FontFamily="Segoe UI" FontSize="13" Foreground="#4B5563" Margin="0,0,0,6"/>
                                
                                <CheckBox Content="Osteoartrite" 
