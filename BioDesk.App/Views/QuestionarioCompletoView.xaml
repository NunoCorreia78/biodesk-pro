                                             SelectedItem="{Binding ProblemasAudicao, UpdateSourceTrigger=PropertyChanged}"
                                             Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                             Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                             SelectionChanged="ComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Nenhum"/>
                                        <ComboBoxItem Content="Perda auditiva"/>
                                        <ComboBoxItem Content="Zumbido no ouvido"/>
                                        <ComboBoxItem Content="Otite recorrente"/>
                                        <ComboBoxItem Content="Outras"/>
                                    </ComboBox>
                                    
                                    <TextBox Name="txt_ProblemasAudicaoOutras" Grid.Column="2"
                                            Text="{Binding ProblemasAudicaoDetalhes, UpdateSourceTrigger=PropertyChanged}"
                                            Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                            Padding="8,6" FontSize="14" Margin="0,4,0,0"
                                            />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Seção 15: Estilo de Vida -->
                <Expander Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,16">
                    <Expander.Header>
                        <TextBlock Text="🏃‍♂️ Estilo de Vida" 
                                  FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold"
                                  Foreground="#1E293B" Margin="16,12"/>
                    </Expander.Header>
                    <StackPanel Margin="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Atividade Física -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,0">
                                <TextBlock Text="Atividade física" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <ComboBox Text="{Binding AtividadeFisica, UpdateSourceTrigger=PropertyChanged}"
                                         IsEditable="True" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0">
                                    <ComboBoxItem Content="Sedentário"/>
                                    <ComboBoxItem Content="Exercício ocasional"/>
                                    <ComboBoxItem Content="Exercício regular"/>
                                    <ComboBoxItem Content="Exercício intenso"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Tabagismo -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,0">
                                <TextBlock Text="Tabagismo" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <ComboBox Text="{Binding Tabagismo, UpdateSourceTrigger=PropertyChanged}"
                                         IsEditable="True" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0">
                                    <ComboBoxItem Content="Nunca fumei"/>
                                    <ComboBoxItem Content="Ex-fumador"/>
                                    <ComboBoxItem Content="Fumador ocasional"/>
                                    <ComboBoxItem Content="Fumador regular"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Consumo de Álcool -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,16,12,0">
                                <TextBlock Text="Consumo de álcool" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <ComboBox Text="{Binding ConsumoAlcool, UpdateSourceTrigger=PropertyChanged}"
                                         IsEditable="True" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0">
                                    <ComboBoxItem Content="Não bebo"/>
                                    <ComboBoxItem Content="Ocasional"/>
                                    <ComboBoxItem Content="Moderado"/>
                                    <ComboBoxItem Content="Frequente"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Qualidade do Sono -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,16,0,0">
                                <TextBlock Text="Qualidade do sono" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <ComboBox Text="{Binding QualidadeSono, UpdateSourceTrigger=PropertyChanged}"
                                         IsEditable="True" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                         Padding="8,6" FontSize="14" Margin="0,4,0,0">
                                    <ComboBoxItem Content="Excelente"/>
                                    <ComboBoxItem Content="Boa"/>
                                    <ComboBoxItem Content="Razoável"/>
                                    <ComboBoxItem Content="Má"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Observações Gerais -->
                            <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,16,0,0">
                                <TextBlock Text="Observações gerais" FontFamily="Segoe UI" FontSize="14" FontWeight="Medium" Foreground="#374151"/>
                                <TextBox Text="{Binding ObservacoesGerais, UpdateSourceTrigger=PropertyChanged}"
                                        Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Padding="12,8" FontSize="14" Margin="0,4,0,0"
                                        AcceptsReturn="True" MinHeight="80"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Consentimentos Informados -->
                <Border Background="#f8fafc" BorderBrush="#e5e7eb" BorderThickness="1" CornerRadius="8" Margin="0,32,0,16">
                    <StackPanel Margin="24">
                        <TextBlock Text="📋 Consentimentos Informados" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold" Foreground="#1f2937" Margin="0,0,0,20"/>
                        <TextBlock Text="Selecione os consentimentos aplicáveis e assine eletronicamente quando necessário." FontFamily="Segoe UI" FontSize="13" Foreground="#6b7280" Margin="0,0,0,24"/>
                        
                        <!-- Consentimento Naturopatia -->
                        <Expander Header="🌿 Naturopatia" Background="White" BorderBrush="#d1d5db" BorderThickness="1" Margin="0,0,0,12">
                            <StackPanel Margin="16">
                                <CheckBox Content="Compreensão da natureza das intervenções (alimentação, fitoterapia, suplementação)" Margin="0,4"/>
                                <CheckBox Content="Objetivos e benefícios explicados" Margin="0,4"/>
                                <CheckBox Content="Riscos potenciais discutidos" Margin="0,4"/>
                                <CheckBox Content="Informação de patologias/medicação fornecida" Margin="0,4"/>
                                <CheckBox Content="Alternativas discutidas" Margin="0,4"/>
                                <CheckBox Content="Autorização e corresponsabilidade aceites" Margin="0,4"/>
                                <CheckBox Content="Revogável a qualquer momento" Margin="0,4"/>
                                
                                <Border Background="#f0f9ff" BorderBrush="#0ea5e9" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,12,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✍️ Assinatura:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <Button Content="📝 Assinar Eletronicamente" 
                                               Command="{Binding AssinarNaturopatiaCommand}"
                                               Background="#0ea5e9" Foreground="White" BorderThickness="0" Padding="12,6" FontSize="12"/>
                                        <TextBlock Text="Não assinado" Foreground="#ef4444" FontStyle="Italic" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>

                        <!-- Consentimento Osteopatia -->
                        <Expander Header="🦴 Osteopatia" Background="White" BorderBrush="#d1d5db" BorderThickness="1" Margin="0,0,0,12">
                            <StackPanel Margin="16">
                                <CheckBox Content="Técnicas manuais explicadas" Margin="0,4"/>
                                <CheckBox Content="Contraindicações e sinais de alerta discutidos" Margin="0,4"/>
                                <CheckBox Content="Riscos explicados (dor, tonturas, hematomas, raríssimos eventos graves)" Margin="0,4"/>
                                <CheckBox Content="Autorizo contacto físico profissional" Margin="0,4"/>
                                <CheckBox Content="Posso interromper a técnica a qualquer momento" Margin="0,4"/>
                                <CheckBox Content="Revogável a qualquer momento" Margin="0,4"/>
                                
                                <Border Background="#f0f9ff" BorderBrush="#0ea5e9" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,12,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✍️ Assinatura:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <Button Content="📝 Assinar Eletronicamente" 
                                               Command="{Binding AssinarOsteopatiaCommand}"
                                               Background="#0ea5e9" Foreground="White" BorderThickness="0" Padding="12,6" FontSize="12"/>
                                        <TextBlock Text="Não assinado" Foreground="#ef4444" FontStyle="Italic" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>

                        <!-- Consentimento Iridologia -->
                        <Expander Header="👁️ Iridologia" Background="White" BorderBrush="#d1d5db" BorderThickness="1" Margin="0,0,0,12">
                            <StackPanel Margin="16">
                                <CheckBox Content="Natureza não invasiva e sem valor diagnóstico médico explicada" Margin="0,4"/>
                                <CheckBox Content="Autorizo captura e armazenamento de imagens da íris" Margin="0,4"/>
                                <CheckBox Content="Compreendo limitações e necessidade de correlação clínica" Margin="0,4"/>
                                <CheckBox Content="Revogável a qualquer momento" Margin="0,4"/>
                                
                                <Border Background="#f0f9ff" BorderBrush="#0ea5e9" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,12,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✍️ Assinatura:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <Button Content="📝 Assinar Eletronicamente" Background="#0ea5e9" Foreground="White" BorderThickness="0" Padding="12,6" FontSize="12"/>
                                        <TextBlock Text="Não assinado" Foreground="#ef4444" FontStyle="Italic" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>

                        <!-- Consentimento Medicina Quântica -->
                        <Expander Header="⚛️ Medicina Quântica (Informacional)" Background="White" BorderBrush="#d1d5db" BorderThickness="1" Margin="0,0,0,12">
                            <StackPanel Margin="16">
                                <CheckBox Content="Abordagem complementar, sem finalidade diagnóstica reconhecida" Margin="0,4"/>
                                <CheckBox Content="Natureza dos procedimentos (bases de dados, frequências, aconselhamento)" Margin="0,4"/>
                                <CheckBox Content="Possíveis reações transitórias explicadas" Margin="0,4"/>
                                <CheckBox Content="Contraindicações discutidas" Margin="0,4"/>
                                <CheckBox Content="Liberdade de interromper a qualquer momento" Margin="0,4"/>
                                <CheckBox Content="Revogável a qualquer momento" Margin="0,4"/>
                                
                                <Border Background="#f0f9ff" BorderBrush="#0ea5e9" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,12,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✍️ Assinatura:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <Button Content="📝 Assinar Eletronicamente" Background="#0ea5e9" Foreground="White" BorderThickness="0" Padding="12,6" FontSize="12"/>
                                        <TextBlock Text="Não assinado" Foreground="#ef4444" FontStyle="Italic" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>

                        <!-- Consentimento RGPD -->
                        <Expander Header="🔒 RGPD - Proteção de Dados" Background="White" BorderBrush="#d1d5db" BorderThickness="1" Margin="0,0,0,12">
                            <StackPanel Margin="16">
                                <CheckBox Content="Informação de responsável, finalidades, conservação e destinatários" Margin="0,4"/>
                                <CheckBox Content="Direitos de acesso, retificação, limitação, oposição, portabilidade e eliminação" Margin="0,4"/>
                                <CheckBox Content="Consentimento explícito para tratamento de dados de saúde" Margin="0,4"/>
                                <CheckBox Content="Opção de não receber marketing" Margin="0,4"/>
                                <CheckBox Content="Revogável a qualquer momento" Margin="0,4"/>
                                
                                <Border Background="#f0f9ff" BorderBrush="#0ea5e9" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,12,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✍️ Assinatura:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <Button Content="📝 Assinar Eletronicamente" Background="#0ea5e9" Foreground="White" BorderThickness="0" Padding="12,6" FontSize="12"/>
                                        <TextBlock Text="Não assinado" Foreground="#ef4444" FontStyle="Italic" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Expander>

                        <!-- Assinatura Geral do Questionário -->
                        <Border Background="#ecfdf5" BorderBrush="#10b981" BorderThickness="2" CornerRadius="8" Padding="20" Margin="0,24,0,0">
                            <StackPanel>
                                <TextBlock Text="✍️ Assinatura do Questionário Completo" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="#065f46" Margin="0,0,0,12"/>
                                <TextBlock Text="Confirmo que todas as informações fornecidas são verdadeiras e autorizo o tratamento conforme os consentimentos selecionados." FontFamily="Segoe UI" FontSize="13" Foreground="#064e3b" Margin="0,0,0,16"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="📝 Assinar Questionário Completo" Background="#10b981" Foreground="White" BorderThickness="0" Padding="16,10" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Não assinado" Foreground="#ef4444" FontWeight="SemiBold" VerticalAlignment="Center" Margin="16,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Botões de Ação -->
        <Border Grid.Row="2" Background="White" BorderBrush="#e5e7eb" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="💾 Guardar Questionário" 
                        Background="#10b981" Foreground="White" 
                        BorderThickness="0" Padding="20,10" FontWeight="SemiBold"
                        Command="{Binding GuardarCommand}"
                        Margin="0,0,15,0"/>
                <Button Content="📄 Gerar PDF" 
                        Background="#3b82f6" Foreground="White" 
                        BorderThickness="0" Padding="20,10" FontWeight="SemiBold"
                        Command="{Binding GerarPdfCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
